FROM debian:bullseye-slim

ENV DEBIAN_FRONTEND noninteractive

USER root

RUN apt-get update && apt-get install -y \
    ca-certificates \
    nginx


RUN cp -f /etc/indi-allsky/self-signed.key /etc/ssl/astroberry.key
RUN cp -f /etc/indi-allsky/self-signed.pem /etc/ssl/astroberry.crt

RUN cp -f /etc/indi-allsky/nginx.conf /etc/nginx/sites-available/default


CMD ["/usr/sbin/nginx", "-g", "daemon off;"]

